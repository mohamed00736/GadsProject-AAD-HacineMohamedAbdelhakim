<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/imgfai"
        android:layout_gravity="right"
        android:layout_margin="7dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_highlight_off_24" />

    <ImageView
        android:id="@+id/iisuc"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_error_24" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="#D50000"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:text=" Submission Failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/failedclose"
        android:textColor="#D11010"
        android:background="@drawable/crnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Dismiss" />

</LinearLayout>